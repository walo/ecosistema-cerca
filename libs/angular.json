{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "design-system": {
      "projectType": "library",
      "root": "design-system",
      "sourceRoot": "design-system/src",
      "prefix": "cc",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "design-system/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "design-system/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "design-system/tsconfig.spec.json"
          }
        }
      }
    }
  }
}
